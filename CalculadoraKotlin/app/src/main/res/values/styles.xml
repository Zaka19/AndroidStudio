<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Characters">
        <item name="android:textColor">@color/colorCharacters</item>
        <item name="android:background">@color/backgroundCharacters</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Numbers">
        <item name="android:background">@color/backgroundNumbers</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Result">
        <item name="android:background">@color/colorCharacters</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>